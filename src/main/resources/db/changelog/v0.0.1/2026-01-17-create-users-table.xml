<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="create_users_table" author="rsadretdinov">
        <createTable tableName="users">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_users"
                             uniqueConstraintName="ch__users_id__uq" notNullConstraintName="ch__users_id__nn"/>
            </column>
            <column name="auth_provider" type="VARCHAR(32)">
                <constraints nullable="false" notNullConstraintName="chk__users_auth_provider__nn"/>
            </column>
            <column name="auth_provider_user_id" type="VARCHAR(128)">
                <constraints nullable="false" notNullConstraintName="chk__users_auth_provider_user_id__nn"/>
            </column>
            <column name="display_name" type="VARCHAR(64)">
                <constraints nullable="false" notNullConstraintName="chk__users_display_name__nn"/>
            </column>
            <column name="profile_url" type="VARCHAR(512)"/>
            <column name="last_login_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false" notNullConstraintName="chk__users_is_active__nn"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false" notNullConstraintName="chk__users_created_at__nn"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false" notNullConstraintName="chk__users_updated_at__nn"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
