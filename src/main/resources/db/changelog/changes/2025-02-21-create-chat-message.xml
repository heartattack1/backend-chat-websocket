<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">
    <changeSet id="2025-02-21-create-chat-message" author="codex">
        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <tableExists tableName="chat_message"/>
                </not>
                <tableExists tableName="users"/>
            </and>
        </preConditions>
        <createTable tableName="chat_message">
            <column name="id" type="VARCHAR(26)">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_chat_message"/>
            </column>
            <column name="author_user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex indexName="idx_chat_message_created_at_id" tableName="chat_message">
            <column name="created_at"/>
            <column name="id"/>
        </createIndex>
        <addForeignKeyConstraint
                baseTableName="chat_message"
                baseColumnNames="author_user_id"
                constraintName="fk_chat_message_author_user"
                referencedTableName="users"
                referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
