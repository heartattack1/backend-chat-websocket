<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">
    <changeSet id="2025-02-20-create-users-table" author="rsadretdinov">

        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <tableExists tableName="users"/>
                </not>
            </and>
        </preConditions>

        <createTable tableName="users">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_users"/>
            </column>
            <column name="provider" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="provider_user_id" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="display_name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="profile_url" type="VARCHAR(512)"/>
            <column name="last_login_at" type="TIMESTAMPTZ"/>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint
                tableName="users"
                columnNames="provider, provider_user_id"
                constraintName="uk_users_provider_provider_user_id"/>
        <createIndex indexName="idx_users_provider" tableName="users">
            <column name="provider"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
